<section class="create-post">
    <h2>Create New Post</h2>
    <form class = "new-post-form">
        <div>
            <input type="text" id="new-post-title" name="new-post-title" placeholder="Title" />
        </div>
        <div>
            <textarea id="new-post-body" name="new-post-body" placeholder="Content"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <div class="posts-container">
        {{#each posts as |post|}}
        <div class="posts-list-item">
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>