<section class="modal">
    <div class="modal-content">
    <div class="create-post">
    <h2>Create New Post</h2>
    <form class = "new-post-form">
        <div>
            <input type="text" id="new-post-title" name="new-post-title" placeholder="Title" />
        </div>
        <div>
            <textarea id="new-post-body" name="new-post-body" placeholder="Content"></textarea>
        </div>
        <button type="submit" class="btn">Publish</button>
    </form>
    </div>
    </div>
</section>

<button type="button" id="add-new-post" class="btn">Write New Blog Post</button>

{{#if posts.length}}
<section>
    <h2>Your Blog Posts</h2>
    <div class="posts-container">
        {{#each posts as |post|}}
        <div class="posts-list-item">
            <button type="button" id="btn-post">{{> post-info post}}</button>
            <div class="btn-modal">
                <button type="button"><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit</a></button>
                <button type="button" class="btn btn-delete">Delete</button>
            </div>
        </div>
        {{/each}}

    </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>