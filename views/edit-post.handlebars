<section>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <span>Posted by you on {{format_date created_at}}</span>
        </div>
        <div class="post-body">
            <input name="post-body" type="text" value="{{post_text}}" />
        </div>
        <div class="btn-container">
            <button type="submit" class="btn btn-post">Save Post</button>
            <button type="button" class="btn btn-delete">Delete Post</button>
            <button type="submit" class="btn btn-comment">Add Comment</button>
        </div>
    </form>
</section>

<div class="comment-modal">
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit">Add Comment</button>
        </div>
    </form>
</div>

{{> comments post.comments }}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>